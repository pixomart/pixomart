                    <div id="content">
                    
                        <div class="jquery_tab">
								<a class="dashboard_button" href="memberships/new">
                                <span class="dashboard_button_heading">Add New</span>
                                <span>Add a new Membership type.</span>
                            </a><!--end dashboard_button-->
                        
                            <div class="content_block">
                                <h2 class="jquery_tab_title">Membership List</h2>
										

                                    <table id="table_liquid" cellspacing="0">
	                                <caption></caption>
	                                  <tr>
	                                    <th width="200px" class="spec">Title</th>
	                                    <th>Description</th>
										<th>Price</th>
										<th>Billing Cycle</th>
										<th>Status</th>
	                                  </tr>
										<% @all_memberships.each do |membership| %>
	                                  <tr>
	                                    <td class="alt"><%= membership.title %></td>
	                                    <td class=""><%= membership.description%></td>
										<td class="alt"><%= membership.price %> $</td>
	                                    <td class="">
										<%=case 
										when membership.billing_cycle = 1 then "Monthly"
										when membership.billing_cycle = 2 then "Quarterly"
										when membership.billing_cycle = 3 then "Half Yearly"  
										when membership.billing_cycle = 4 then "Annually"
										when membership.billing_cycle = 2 then "Lifetime"
										end										
										%></td>
	                                    <td class="alt">
										<%=case 
										when membership.status = 1 then "Active"
										when membership.status = 2 then "Inactive"
										when membership.status = 3 then "hidden"  
										end										
										%></td>	
	                                  </tr>
										<%end%>
	                                </table>
                                
                             </div><!--end content_block-->
                            
