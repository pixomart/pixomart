    <div id="top">
    
        <div id="head">
        	<h1 class="logo">
            	<a href="">Pixomart Admin</a>
            </h1>
            
            <div class="head_memberinfo">
            	<div class="head_memberinfo_logo">
                	<span>3</span>
                	<img src="../images/unreadmail.png" alt=""/>
                </div>
                
                <span class='memberinfo_span'>
               		 Welcome <a href=""><%= session[:name]%></a>
                </span>
                
                <span class='memberinfo_span'>
                	<a href="">Settings</a>
                </span>
                
                <span>
					<%= link_to("Logout", :action => 'admins/logout') %>
